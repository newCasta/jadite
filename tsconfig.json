{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "rootDir": "src"
    },
    "exclude": ["node_modules", "**/node_modules/*"],
    "include": ["src/**/*"]
}
